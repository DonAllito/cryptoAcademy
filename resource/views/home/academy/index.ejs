
    <!-- Jumbotron Header -->
<header class="jumbotron hero-spacer">
  <h1><%= ('title') || 'کریپتو آکادمی' %></h1>
  <p><%= ('description') %></p>
</header>

<div class="row mb-3">
  <div class="col-lg-12">
      <h3>آخرین دوره ها</h3>
  </div>
</div>
<div class="row">
    <% courses.forEach(course => { %>
      <div class="col-6 col-md-3">
          <div class="card">
              <img class="card-img-top" src="<%= course.thumb %>" alt="<%= course.title %>">
              <div class="card-body">
                <h3><a href="<%= course.path() %>"><%= course.title %></a></h3>
                <p class="card-text"><%= course.body.substr(0,100) %></p>
                <a href="<%= course.path() %>" class="btn btn-primary btn-sm">اطلاعات بیشتر</a>
              </div>
              <div class="card-footer text-muted">
                <%= course.viewCount %> بازدید
              </div>
          </div>
      </div>
    <% }) %>
</div>

<div class="box_section-item mt-2">
  <div class="container">
      <h5>مقاله ها</h5>
      <div class="row">
          <% articles.forEach(article => { %>
          <div class="col-md-4">
              <div class="card mb-4">
                  <% Object.entries(article.images).forEach(([size, image]) => { %>
                  <% if(size == "360") { %>
                  <a href="<%= article.path() %>"><img class="card-img-top" src="<%= image %>"
                          alt="<%= article.title %>" style="width: 100%; height: 200px; object-fit : cover"></a>
                  <% } %>
                  <% }) %>
                  <div class="card-body">
                      <h5 class="card-text"><%- article.title %></h5>
                      <div class="d-flex justify-content-between align-items-center">
                          <div class="btn-group">
                              <a href="<%= article.path() %>" class="btn btn-sm btn-outline-secondary">مشاهده</a>
                          </div>
                          <small class="text-muted"><%- article.viewCount %></small>
                      </div>
                  </div>
              </div>
          </div>
          <% }) %>

      </div>
  </div>
</div>